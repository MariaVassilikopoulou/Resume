<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        @*  <a href="Identity/Account/Register">Register</a> *@
        @*  <a href="Identity/Account/Login">Log in</a> *@
        <div class="top-row px-4 auth" style="text-align: center; margin-bottom: 60px; ">
            <h3 style="color: #34b7a7;">Kindly log in to access the Skills and Projects. </h3>
            <form method="get" action="Identity/Account/Register" style="display: inline-block;">
                
                <button type="submit" class=" buttone">Register</button>
            </form>
            <form method="get" action="Identity/Account/Login" style="display: inline-block;">
                
                <button type="submit" class="buttone">Log in</button>
            </form>
        </div>
    </NotAuthorized>
</AuthorizeView>
